{
  "compilerOptions": {
    // Basic Project Settings
    "rootDir": ".",
    "baseUrl": "src",
    "outDir": "dist",
    "incremental": true,
    // Module and Build Configuration
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "verbatimModuleSyntax": false,
    // "verbatimModuleSyntax": true, // Desabilitado para compatibilidade com ts-node-dev
    // "noEmit": true, // Desabilitado para permitir a compilação
    // Type Checking and Strict Rules
    "strict": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "strictPropertyInitialization": false, // Ajustado para flexibilidade
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}