{
  "name": "video-concat-service",
  "version": "1.0.0",
  "description": "Video concatenation service using Node.js and FFmpeg",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsnd --env-file=.env --respawn --transpile-only --exit-child -r tsconfig-paths/register src/api/server.ts",
    "build": "swc src -d dist --copy-files",
    "build:watch": "swc src -d dist --copy-files --watch",
    "start": "node dist/src/api/server.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "@ffprobe-installer/ffprobe": "^2.1.0",
    "axios": "^1.7.2",
    "express": "^4.18.2",
    "fluent-ffmpeg": "^2.1.3",
    "form-data": "^4.0.2",
    "mammoth": "^1.7.2",
    "morgan": "^1.10.0",
    "openai": "^4.52.0",
    "pdf-parse": "^1.1.1",
    "serve-index": "^1.9.1",
    "sharp": "^0.32.0",
    "tmp": "^0.2.3",
    "tsconfig-paths": "^4.2.0",
    "winston": "^3.13.1",
    "zod": "^4.0.2"
  },
  "devDependencies": {
    "@swc/cli": "^0.7.8",
    "@swc/core": "^1.12.11",
    "@swc/plugin-transform-imports": "^8.0.4",
    "@types/bun": "latest",
    "@types/express": "^4.17.21",
    "@types/fluent-ffmpeg": "^2.1.27",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.14.12",
    "@types/pdf-parse": "^1.1.5",
    "@types/serve-index": "^1.9.4",
    "@types/tmp": "^0.2.6",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.5.4"
  }
}
